<div id="{{ entity.code }}"{% if action == 'edit' %} data-uri="{{ path('language_edit', {'code': entity.code}) }}"{% endif %}>
	<h3 class="first-column" itemprop="itemListElement"{% if action == 'edit' %} data-name="language[code]"{% endif %}>{{ ('app.language.' ~ entity.code)|trans }}</h3>
	{% if entity.meaning is not null -%}
	<p class="short"{% if action == 'edit' %} data-name="language[level]"{% endif %}>
		{{- entity.level -}}
	</p>
	<p class="smaller"{% if action == 'edit' %} data-name="language[meaning]"{% endif %}>(
		{{- entity.meaning -}}
	)</p>
	{%- else -%}
	<p{% if action == 'edit' %} data-name="language[level]"{% endif %}>{{ entity.level }}</p>
	{%- endif -%}
</div>