{% extends 'base.html.twig' %}

{% block title %}Person index{% endblock %}

{% block body %}
	<h1>Person index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>FirstName</th>
				<th>LastName</th>
				<th>Position</th>
				<th>BirthDate</th>
				<th>Phone</th>
				<th>Address.street</th>
				<th>Address.postalCode</th>
				<th>Address.city</th>
				<th>Address.country</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
		{% for person in people %}
			<tr>
				<td>{{ person.id }}</td>
				<td>{{ person.firstName }}</td>
				<td>{{ person.lastName }}</td>
				<td>{{ person.position }}</td>
				<td>{{ person.birthDate ? person.birthDate|date('Y-m-d') : '' }}</td>
				<td>{{ person.phone }}</td>
				<td>{{ person.address.street }}</td>
				<td>{{ person.address.postalCode }}</td>
				<td>{{ person.address.city }}</td>
				<td>{{ person.address.country }}</td>
				<td>
					<a href="{{ path('person_show', {'id': person.id}) }}">show</a>
					<a href="{{ path('person_edit', {'id': person.id}) }}">edit</a>
				</td>
			</tr>
		{% else %}
			<tr>
				<td colspan="11">no records found</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('person_new') }}">Create new</a>
{% endblock %}
