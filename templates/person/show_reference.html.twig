<div id="{{ entity.id }}"{% if action == 'edit' %} data-uri="{{ path('person_edit', {'id': entity.id}) }}"{% endif %}>
	<h3{% if action == 'edit' %} data-name="person[fullName]"{% endif %}>{{ entity.fullName }}</h3>
	{%~ if entity.experiences.count %}
	<p{% if action == 'edit' %} data-uri="{{ path('experience_edit', {'id': entity.experiences[0].id}) }}"><span data-name="experience[what]"{% endif %}>
		{{- entity.experiences[0].role|raw }}
		{%- if action == 'edit' %}</span>{% endif %}, {% if action == 'edit' %}<span data-name="experience[company]">{% endif %}
		{{- entity.experiences[0].company.name -}}
		{%- if action == 'edit' %}</span>{% endif -%}
	</p>
	{%~ endif %}
</div>