{% extends 'base.html.twig' %}

{% block title %}Person{% endblock %}

{% block body %}
	<h1>Person</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ person.id }}</td>
			</tr>
			<tr>
				<th>FirstName</th>
				<td>{{ person.firstName }}</td>
			</tr>
			<tr>
				<th>LastName</th>
				<td>{{ person.lastName }}</td>
			</tr>
			<tr>
				<th>Position</th>
				<td>{{ person.position }}</td>
			</tr>
			<tr>
				<th>BirthDate</th>
				<td>{{ person.birthDate ? person.birthDate|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Phone</th>
				<td>{{ person.phone }}</td>
			</tr>
			<tr>
				<th>Address.street</th>
				<td>{{ person.address.street }}</td>
			</tr>
			<tr>
				<th>Address.postalCode</th>
				<td>{{ person.address.postalCode }}</td>
			</tr>
			<tr>
				<th>Address.city</th>
				<td>{{ person.address.city }}</td>
			</tr>
			<tr>
				<th>Address.country</th>
				<td>{{ person.address.country }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('person_index') }}">back to list</a>

	<a href="{{ path('person_edit', {'id': person.id}) }}">edit</a>

	{{ include('person/_delete_form.html.twig') }}
{% endblock %}
