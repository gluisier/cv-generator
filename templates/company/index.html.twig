{% extends 'base.html.twig' %}

{% block title %}Company index{% endblock %}

{% block body %}
	<h1>Company index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Link</th>
				<th>Address.street</th>
				<th>Address.postalCode</th>
				<th>Address.city</th>
				<th>Address.country</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
		{% for company in companies %}
			<tr>
				<td>{{ company.id }}</td>
				<td>{{ company.name }}</td>
				<td>{{ company.link }}</td>
				<td>{{ company.address.street }}</td>
				<td>{{ company.address.postalCode }}</td>
				<td>{{ company.address.city }}</td>
				<td>{{ company.address.country }}</td>
				<td>
					<a href="{{ path('app_company_show', {'id': company.id}) }}">show</a>
					<a href="{{ path('app_company_edit', {'id': company.id}) }}">edit</a>
				</td>
			</tr>
		{% else %}
			<tr>
				<td colspan="8">no records found</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_company_new') }}">Create new</a>
{% endblock %}
