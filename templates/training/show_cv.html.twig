<div id="{{ entity.id }}" class="vevent" itemscope="itemscope" itemtype="http://schema.org/EducationalEvent"{% if action == 'edit' %} data-uri="{{ path('experience_edit', {'id': entity.id}) }}"{% endif %}>
	<p class="first-column"><time class="dtstart" datetime="{{ entity.startDate|date('Y-m-d') }}" itemprop="startDate"{% if action == 'edit' %} data-name="experience[startDate]"{% endif %}>
		{{- entity.startDate|date('Y') -}}
		</time> â€“ <time class="dtend" datetime="{{ entity.endDate|date('Y-m-d') }}" itemprop="endDate"{% if action == 'edit' %} data-name="experience[endDate]"{% endif %}>
			{{- entity.endDate|date('Y') -}}
		</time></p>
	<div>
		{% if entity.role %}<h3 class="what summary"{% if action == 'edit' %} data-name="experience[what]"{% endif %}>{{ entity.role }}</h3>{% endif %}
		<p class="middle" itemprop="organizer" itemscope="itemscope" itemtype="http://schema.org/Organization"{% if action == 'edit' %} data-uri="{{ path('company_edit', {'id': entity.company.id}) }}"{% endif %}>
			{%- if entity.company.link -%}
				<a href="{{ entity.company.link }}" title="{{ 'app.company.link.title'|trans }}" itemprop="legalName url"{% if action == 'edit' %} data-name="company[name]"{% endif %}>
			{%- else -%}
				<span itemprop="legalName"{% if action == 'edit' %} data-name="company[name]"{% endif %}>
			{%- endif -%}
			{{- entity.company.name -}}
			{%- if entity.company.link -%}
				</a>
			{%- else -%}
				</span>
			{%- endif -%}
		</p>
		<p class="place location right" itemprop="location"{% if action == 'edit' %} data-name="company[address][city]"{% endif %}>{{ entity.company.address.city }}</p>
	</div>
</div>