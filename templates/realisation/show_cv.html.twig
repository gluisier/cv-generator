<details open="open" class="p-achievement"{% if action == 'edit' %} data-uri="{{ path('realisation_edit', {'id': entity.id}) }}"{% endif %}>
	<summary class="summary p-summary"><h5{% if action == 'edit' %} data-name="realisation[name]"{% endif %}>
		{{- entity.name -}}
		</h5>
		{% if entity.link %}
		<a href="{{ entity.link }}" title="{{ 'app.realisation.link.title'|trans }}" target="_blank"{% if action == 'edit' %} data-name="realisation[name]"{% endif %}>
		   <i class="fa-solid fa-external-link-alt fa-xs"></i>
		</a>
		{% else %}
		{% endif %}
	</summary>
	{% if entity.tasks|length -%}
	<details open="open">
		<summary{% if action == 'edit' %}><span data-name="realisation[description]"{% endif %}>{{ entity.description }}
		{% if action == 'edit' %}]</span>{% endif -%}
		{%- if (entity.technologies.count) %}
			{% include 'technology/index_cv.html.twig' with {'entities': entity.technologies} %}
		{%- endif %}</summary>
		<ul>
			{% for task in entity.tasks %}
			<li{% if action == 'edit' %} data-uri="{{ path('task_edit', {'id': task.id}) }}" data-name="task[description]"{% endif %}>{{ task.description|raw }}</li>
			{% endfor %}
		</ul>
	</details>
	{% else %}
	<div>
		{%- if action == 'edit' %}<span data-name="realisation[description]">{% endif %}
		{{- entity.description -}}
		{%- if action == 'edit' %}</span>{% endif %}
		{%- if (entity.technologies.count) %}
			{% include 'technology/index_cv.html.twig' with {'entities': entity.technologies} %}
		{%- endif %}
	</div>
	{% endif %}
</details>